def main():
### Generate primes
    top = 1000000
    si = sieve( top )
    primes = dict()
### Populate the hash
    for prime in range( top ):
        if si[ prime ] == True: primes[ prime ] = 1

    print( "Primes generated" )
    maxprimes = 0
    product = 0
    for a in range( -999, 1000 ):
        for b in range( -999, 1000 ):
            n = 0
            while True:
                if ( n ** 2 + ( a * n ) + b ) in primes:
                    n += 1
                else:
                    if n > maxprimes:
                        maxprimes = n
                        product = a * b
                    break

    return ( maxprimes, product )


def sieve( size ):
### Create initial list
    A = [ True for x in range( size ) ]

    for i in range( 2, size ):
        if( A[ i ] ):
            for j in range( 2*i, size, i ):
                A[ j ] = False

    return A

print( main() )
